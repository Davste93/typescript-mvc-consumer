{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": false,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "typings/main.d.ts",
    "!node_modules/**/*.ts"
  ],
  "files": [
    "src/app.ts",
    "src/implementation/config/config.ts",
    "src/implementation/data/AddressDataRepository.ts",
    "src/implementation/data/AddressDataRepositoryImpl.ts",
    "src/implementation/data/UserDataRepository.ts",
    "src/implementation/data/UserDataRepositoryImpl.ts",
    "src/implementation/model/AddressModel.ts",
    "src/implementation/model/UserModel.ts",
    "src/implementation/service/AddressService.ts",
    "src/implementation/service/UserService.ts",
    "typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
